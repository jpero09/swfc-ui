.panel
  div(data-ng-show='isLoading')
    | Loading...
  div(data-ng-show='!isLoading')
    h2 Card Info
    .row(data-ng-show='!cards || !cards.length')
      .col-md-12
        | No card data available at this time.
    .row(data-ng-repeat='card in cards')
      .col-md-12
        .media
          .media-left.media-top
            img.media-object(src='./images/unknown.png', alt='{{card.firstName}} {{card.lastName}}')
          .media-body
            h4.media-heading
              span {{card.firstName}} {{card.lastName}}
              span(data-ng-show='card.nickname') &nbsp;[{{card.nickname}}]
            .media-content
              .row
                .col-md-5
                  .affiliations
                    label Affiliations:
                    i.fa.fa-mars(data-ng-show='card.gender === "Male"')
                    i.fa.fa-venus(data-ng-show='card.gender === "Female"')
                  .stats
                    div Range: {{card.range}}
                    div Cost: {{card.cost}}
                    div ACC: {{card.accuracy}}
                    div EVA: {{card.evade}}
                  div.label.label-primary(data-ng-show='card.skill')
                    | Skill: {{card.skill.name}}
                .col-md-7    
                  table.table.table-hover.table-condensed
                    thead
                      tr
                        th(colspan='3') 
                        th(colspan='2') Evo-2
                        th(colspan='2') Evo-Max
                      tr
                        th 
                        th Base
                        th Evo-1
                        th (3 Card)
                        th (4 Card)
                        th (4/7)
                        th (8/15)
                    tbody    
                      tr
                        td ATK
                        td {{card.baseAttack}}
                        td 1
                        td 2
                        td 3
                        td 4
                        td 5
                      tr
                        td DEF
                        td {{card.baseAttack}}
                        td 1
                        td 2
                        td 3
                        td 4
                        td 5  
              
